<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.example.helper.widget.IconImgView
        android:layout_marginVertical="@dimen/margin_ver"
        app:IIVcornerSize="@dimen/corner_size"
        app:IIVtextBackground="@color/text_background"
        android:src="@drawable/brush"
        android:layout_marginLeft="@dimen/iconLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <com.example.helper.widget.CornerToggleView
        android:layout_marginVertical="@dimen/margin_ver"
        android:paddingLeft="@dimen/left_padding"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:CTVbackground="@color/text_background"
        app:CTVcornerSize="@dimen/corner_size"
        app:CTVbuttonON="@drawable/botton_on"
        app:CTVbuttonOFF="@drawable/button_off"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size"
        android:text="提醒老人洗漱"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>