<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ont.media.player.IjkVideoView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/screenshot_btn"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@mipmap/screenshot"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:textColor="@color/colorText5"
                android:textSize="11dp"
                android:text="@string/screenshot_name"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/microphone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/microphone_btn"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@mipmap/microphone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:textColor="@color/colorText5"
                android:textSize="11dp"
                android:text="@string/microphone_name"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>