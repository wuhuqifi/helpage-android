<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_img" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/pic"
        android:layout_alignTop="@id/pic"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="@color/color_black0"
        android:text="name" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_title"
        android:layout_alignBottom="@id/pic"
        android:textSize="9dp"
        android:textColor="@color/colorText4"
        android:text="time" />

    <TextView
        android:id="@+id/txt_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_desc"
        android:layout_alignParentRight="true"
        android:textSize="7dp"
        android:textColor="@color/colorText4"
        android:text="size" />

</RelativeLayout>
